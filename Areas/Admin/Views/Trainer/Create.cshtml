@using Fitness.S1.Areas.Admin.ViewModels
@model CreateTrainerVM
<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Add Trainer</h4>
                <form asp-action="Create"
                      asp-controller="Trainer"
                      method="post"
                      enctype="multipart/form-data"
                      class="forms-sample">

                    <div class="form-group">
                        <label for="Photo">Image</label>
                        <input asp-for="Photo" type="file" class="form-control" accept="image/*" placeholder="Image">
                        <span asp-validation-for="Photo" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span asp-validation-for="Name" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="Specialty">Specialty</label>
                        <input asp-for="Specialty" class="form-control" placeholder="Specialty">
                        <span asp-validation-for="Specialty" style="color:red"></span>
                    </div>
                    <div class="form-group">
                        <label for="Bio">Bio</label>
                        <input asp-for="Bio" class="form-control" placeholder="Bio">
                        <span asp-validation-for="Bio" style="color:red"></span>
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Submit</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
